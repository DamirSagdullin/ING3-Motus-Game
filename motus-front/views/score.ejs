<!DOCTYPE html>
<html>
  <head>
    <title>Score</title>
    <%- include('common/imports') %>
  </head>
  <body>
    <%- include('common/navbar') %>

    <div class="container py-4">
      <div class="row justify-content-center">
        <div class="col-md-6">
          <div class="card shadow">
            <div class="card-body">
              <h1 class="card-title mb-4 text-center"><i class="fas fa-trophy"></i> My Motus Score</h1>
              <table class="table">
                <thead>
                  <tr>
                    <th scope="col">Info</th>
                    <th scope="col">Value</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <td>Nb Word(s) found</td>
                    <td id="words-found"><%= totalGuessedWords %></td>
                  </tr>
                  <tr>
                    <td>Average tries</td>
                    <td id="average-try"><%= averageTries %></td>
                  </tr>
                </tbody>
              </table>
              <div class="mt-4">
                <a class="btn btn-primary" href="/"><i class="fa-solid fa-backward-step"></i> Go Back</a>
                <a class="btn btn-danger" id="reset-score"><i class="fa-solid fa-trash"></i> Reset Score</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="/front/js/score.js"></script>
  </body>
</html>
